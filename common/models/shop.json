{
  "name": "Shop",
  "description": "Extra info for providers",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "lng": {
      "type": "number",
      "required": false,
	  "dataType": "decimal",
  	  "precision": 8,
  	  "scale": 5
    },
    "lat": {
		"type": "number",
        "required": false,
  	  	"dataType": "decimal",
    	"precision": 8,
    	"scale": 5
    },
    "tags": {
      "type": "array",
      "required": false
    },
    "withdrawn": {
      "type": "Boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
