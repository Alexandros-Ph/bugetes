{
  "name": "Price",
  "description": "Contains all data that are different between product posts",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "http": {"path": "/api/Prices"},
  "properties": {
    "price": {
      "type": "number",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "distance": {
      "type": "number",
      "required": false
    },
    "description": {
      "type": "string",
      "required": false
    },
    "amount": {
      "type": "number",
      "required": false
    },
    "expiredAfter": {
      "type": "number",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "provider": {
      "type": "belongsTo",
      "model": "MyUser",
      "foreignKey": "userId"
    },
    "shop": {
      "type": "belongsTo",
      "model": "Shop",
      "foreignKey": "shopId"
    },
    "product": {
      "type": "belongsTo",
      "model": "Product",
      "foreignKey": "productId"
    }
  },
  "acls": [
	  {
		  "accessType": "WRITE",
		  "principalType": "ROLE",
		  "principalId": "$everyone",
		  "permission": "DENY"
	  },
	  {
		  "accessType": "WRITE",
		  "principalType": "ROLE",
		  "principalId": "$authenticated",
		  "permission": "ALLOW"
	  }
  ],
  "methods": {}
}
