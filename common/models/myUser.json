{
  "name": "MyUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "relations": {
    "shop": {
      "type": "hasOne",
      "model": "Shop",
      "foreignKey": "shopId"
    },
	"accessTokens": {
      "type": "hasMany",
      "model": "MyToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
	}
  },
  "acls": [
	{
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "custom_login"
  },
  {
	"principalType": "ROLE",
	"principalId": "$everyone",
	"permission": "ALLOW",
	"property": "custom_logout"
  }
  ],
  "methods": {}
}
